#!/bin/bash

shopt -s extglob

PageA="${1/%\/index\.htm}"
PageB="${PageA/%\.htm}"
Page="$(basename "$PageB")";
echo "Working on page: $Page"
rm -rf "../../built/$1"
mkdir -p "../../built/$1"
rm -rf "../../built/$1"
cp "../assets/1_start.html" "../../built/$1"
cat "../content/$1" >> "../../built/$1"
cat "../assets/2_end.html" >> "../../built/$1"
hypertoc --inline --make_anchors --ol --ol_num_levels 0 --make_toc --outfile "../../built/0.tmp" --toc_label "<h2>Table of Contents</h2>" --toc_tag "!-- toc --" --toc_tag_replace --quiet --header "../../built/0h.tmp" --footer "../../built/0f.tmp" --use_id --ignore_sole_first --toc_entry H1=1 --toc_entry H2=2 --toc_entry H3=3 --toc_entry H4=4 --toc_entry H5=5 --toc_entry H6=6 --toc_end H1=/H1 --toc_end H2=/H2 --toc_end H3=/H3 --toc_end H4=/H4 --toc_end H5=/H5 --toc_end H6=/H6 "../../built/$1"
html-minifier --output "../../built/$1" --remove-comments --use-short-doctype "../../built/0.tmp"
tr '\n' ' ' < "../../built/$1" > "../../built/1.tmp"
tr '\t' ' ' < "../../built/1.tmp" > "../../built/2.tmp"
tr '\r' ' ' < "../../built/2.tmp" > "../../built/3.tmp"
tr -s " " < "../../built/3.tmp" > "../../built/$1"
perl -p -i -e "s/nav-item-inactive $Page\"/nav-item-selected\"/g" "../../built/$1"
perl -p -e "s/^((?!^<h1 class=\"title\">([^<]+)<\/h1>).)*$//g" "../content/$1" > "../../built/4.tmp"
perl -p -i -e 's/^\s*//;s/\s*$//;s/\s+/ /;' "../../built/4.tmp"
perl -p -i -e "s/<h1 class=\"title\">([^<]+)<\/h1>.*/\\1/g" "../../built/4.tmp"
title="$(cat ../../built/4.tmp)"
ere_quote() {
    sed 's/[]\.|$(){}?+*^]/\\&/g' <<< "$*"
}
title="$(ere_quote $title)"
if [ -n "$title" ]; then
	replace="s/<title>Futuramerlin<\/title>/<title>$title &mdash; Futuramerlin<\/title>/g"
	perl -p -i -e "$replace" "../../built/$1"
fi
if [ "$Page" == "." ]; then
    replace="s/<p class=\"logo\">(((?!<\/p>)[\S\s])*)<\/p>/<h1 class=\"logo\">\1<\/h1>/g"
    perl -p -i -e "$replace" "../../built/$1"
    perl -p -i -e "s/nav-item-inactive index\"/nav-item-selected\"/g" "../../built/$1"
fi
perl -p -i -e "s/nav-item-inactive \w+/nav-item-inactive/g" "../../built/$1"
shopt -u extglob
StrMatch="s/href=\"(..\/)?..\/(.\/)*\//href=\"\//g"
perl -p -i -e "$StrMatch" "../../built/$1"
shopt -s extglob
rm -f ../../built/*.tmp
