#!/bin/bash
# Crystallise

#Script must be run as root.

#Usage: crystallise-update

[ "$(whoami)" != "root" ] && exec sudo -- "$0" "$@"

#Script should exit if any operation fails.
set -e

CrystalID=CrystalliseUpdate-$(date +%Y-%m-%d-%H-%M-%S-%N)-$(xxd -pu <<< "$(date +%z)")-$(python -c 'import uuid; print str(uuid.uuid4())')
export CrystalID

echo "Please wait until the script says \"Done updating!\"..."

pip install --upgrade git+https://github.com/ethus3h/internetarchive

ls -las /usr/bin
touch /usr/bin/crystallise-rescue-tmp
touch /usr/bin/crystallise-update-tmp

cp -v /usr/bin/crystallise-update /usr/bin/crystallise-update.old.$CrystalID
crystallise /usr/bin/crystallise /usr/bin/crystallise-logsession /usr/bin/crystallise-internal-xz /usr/bin/crystallise-internal-ia /usr/bin/crystallise-internal-xz-b /usr/bin/decrystallise /usr/bin/decrystallise-logsession /usr/bin/crystallise-rescue-tmp /usr/bin/crystallise-update-tmp /usr/bin/crystallise-update.old.$CrystalID
echo "Please wait; still updating..."
mkdir -v ~/$CrystalID.tmp
cd ~/$CrystalID.tmp
wget https://raw.githubusercontent.com/ethus3h/ember/master/ember-satellite-projects/crystallise/crystallise
wget https://raw.githubusercontent.com/ethus3h/ember/master/ember-satellite-projects/crystallise/crystallise-rescue
wget https://raw.githubusercontent.com/ethus3h/ember/master/ember-satellite-projects/crystallise/crystallise-logsession
wget https://raw.githubusercontent.com/ethus3h/ember/master/ember-satellite-projects/crystallise/crystallise-internal-xz
wget https://raw.githubusercontent.com/ethus3h/ember/master/ember-satellite-projects/crystallise/crystallise-internal-ia
wget https://raw.githubusercontent.com/ethus3h/ember/master/ember-satellite-projects/crystallise/crystallise-internal-xz-b
wget https://raw.githubusercontent.com/ethus3h/ember/master/ember-satellite-projects/crystallise/decrystallise
wget https://raw.githubusercontent.com/ethus3h/ember/master/ember-satellite-projects/crystallise/decrystallise-logsession
wget https://raw.githubusercontent.com/ethus3h/ember/master/ember-satellite-projects/crystallise/quickliquid
wget https://raw.githubusercontent.com/ethus3h/ember/master/ember-satellite-projects/crystallise/dequicklify
chmod +x ./*
cp -v ./* /usr/bin/
cd ~
crystallise ~/$CrystalID.tmp
echo "Please wait; still updating..."
mkdir -v ~/$CrystalID.tmp
cd ~/$CrystalID.tmp
wget https://raw.githubusercontent.com/ethus3h/ember/master/ember-satellite-projects/crystallise/crystallise-update
chmod +x ./*

# Spawn update script â€” based on http://dirty-motherfucker.org/blog/2012/02/26/self-updating-bash-script-revised/
cat > /usr/bin/crystallise-update-tmp.sh << EOF
#!/bin/bash
# Overwrite old file with new
if cp -v ./* /usr/bin/; then
    cd ~

    #Clear the screen
    printf "\033c"

    echo "Done updating!"
else
    echo "Failed! This should generally not happen; please report it as a bug."
fi
EOF

chmod +x /usr/bin/crystallise-update-tmp.sh

echo -n "Inserting update process..."
exec /bin/bash /usr/bin/crystallise-update-tmp.sh